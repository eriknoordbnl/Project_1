# Directory tree variables
Dir_name:
- ansible
- backup
- files
- scripts
- temp
- wireguard
tree_path: "/home/$USER"
# Package install
Package_name:
- nano
- ufw
- fail2ban
- apticron
- logwatch
- unattended-upgrades
- apt-listchanges
# Unattended upgrades
src_unattend: "~/files/50unattended-upgrades"
dest_unattend: "/etc/apt/apt.conf.d/50unattended-upgrades"
